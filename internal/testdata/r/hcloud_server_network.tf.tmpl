{{- /* vim: set ft=terraform: */ -}}

resource "hcloud_server_network" "{{ .Name }}" {
  {{/* Required properties */ -}}
  server_id  = {{ .ServerID }}
  network_id = {{ .NetworkID }}
  {{- /* Optional properties */}}
  {{- if .IP }}
  ip         = "{{ .IP }}"
  {{ end }}
  {{- if .AliasIPs }}
  alias_ips  = [{{ StringsJoin .AliasIPs ", " }}]
  {{ end }}
}
